<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="180"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="180">
    <layer-list>
        <item>
            <shape android:shape="rectangle">
                <gradient
                    android:angle="90"
                    android:endColor="#44A2FF"
                    android:startColor="#5AADFF"
                    android:type="linear" />
            </shape>
        </item>
        <item
            android:bottom="90dp"
            android:top="-90dp">
            <shape android:shape="oval">
                <size android:height="20dp" />
                <gradient
                    android:angle="90"
                    android:endColor="#0044A2FF"
                    android:startColor="#409BF6"
                    android:type="linear" />
            </shape>
        </item>
    </layer-list>
</rotate>

